style.
    *, *::before, *::after {
        box-sizing: border-box;
        padding: 0;
        margin: 0
    }

    body {
    background-color: #f6f6f6;
    font-family: sans-serif;
    -webkit-font-smoothing: antialiased;
    font-size: 14px;
    line-height: 1.4;
    margin: 0;
    padding: 0;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    }

    table, tbody, tr, td {
        display:block;
    }

    /* -------------------------------------
    BODY & CONTAINER
    ------------------------------------- */

    .container {
    margin: 0 auto;
    max-width: 580px;
    padding: 10px;
    width: 100%;
    }

    /* -------------------------------------
    TYPOGRAPHY
    ------------------------------------- */
    h1 {
    color: #000000;
    font-family: sans-serif;
    font-weight: 400;
    line-height: 1.4;
    margin: 0;
    margin-bottom: 20px;
    font-size: 35px;
    text-align: center;
    text-transform: capitalize;
    }

    p {
    font-family: sans-serif;
    font-size: 14px;
    font-weight: normal;
    margin: 0;
    margin-bottom: 15px;
    }
